<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

<style>
    .center{
        display: block;
        margin-left: auto;
        margin-right: auto;
        padding: 1em;
    }
    
</style>

<h1 style="text-align: center;">Covid Data </h1>

{{#each info as |val key|}}
<img class="center" src="{{val.countryInfo.flag}}">
{{!-- <button type="button" onclick="show()">Get Information</button> --}}

 <h2 style="text-align: center;">{{val.country}}</h2> 
 <h3 style="text-align: center;" class="text-warning">Today's Cases: {{val.todayCases}}</h3>
 <h3 style="text-align: center;" class="text-success">Total Cases: {{val.cases}}</h3>
 <h3 style="text-align: center;" class="text-danger">Total Deaths: {{val.deaths}}</h3>
{{/each}}